<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mtrzepacz.quizgame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/thinking_quiz"
        android:label="Twoj Quiz"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MathActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Start">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".ITActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Start">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Start">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".TopicList"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Start">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".PlayOrAddNewQuestionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".TopicList">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".AddNewQuestionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".PlayOrAddNewQuestionActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
        <activity
            android:name=".CustomCategoryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".PlayOrAddNewQuestionActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Start" />
        </activity>
    </application>

</manifest>